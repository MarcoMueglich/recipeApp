extends layout

block content
    .container.py-5
        form
            .mb-3
                label.form-label(for='inputTitle') Titel
                input#inputTitle.form-control(type='text')
            .mb-3
                label.form-label(for='inputCategory') Kategorie
                select#inputCategory.form-select
                    option Vorspeise
                    option Hauptspeise
                    option Nachspeise
            .mb-3
                label.form-label(for='inputTitle') Foto (URL)
                input#inputTitle.form-control(type='url')
            button.btn.btn-primary(type='submit') Submit
