extends layout

block content
    .container.py-5
        h1.text-center #{recipeData.title}
        .d-flex.justify-content-center
            img.rounded.my-3.border.border-dark(src= recipeData.imgUrl, alt="" width="500px")
        h2 Zubereitung
        p #{recipeData.instructions}
        h2 Zutaten
        ul
            each ingredient, index in recipeData.ingredients
                li #{recipeData.amounts[index] + " " + ingredient}
        a(href="/rezepte/" + recipeData._id + "/bearbeiten") 
            button#editBtn.btn.btn-primary.text-light Bearbeiten 
        button#deleteBtn.btn.btn-danger.ms-2 LÃ¶schen

        form
            input#recipeId.form-control(type='hidden',name='recipeid', required='true', value=recipeData._id )
    script(src="../js/recipeDetail.js")